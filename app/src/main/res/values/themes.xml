<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ExamWiz" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>

        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_light</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Change the color of the box border -->
        <item name="boxStrokeColor">@color/primary</item>
        <!-- Change the color of the hint text -->
        <item name="hintTextColor">@color/primary</item>

    </style>

    <style name="DropTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <!-- Change the color of the box border -->
        <item name="boxStrokeColor">@color/primary</item>
        <!-- Change the color of the hint text -->
        <item name="hintTextColor">@color/primary</item>
        <!-- Change the color of the dropdown icon -->
        <item name="endIconTint">@color/primary</item>

    </style>

    <style name="Theme.ExamWiz" parent="Base.Theme.ExamWiz" />

    <style name="round_img_view">
        <item name="cornerFamily">rounded</item>
        <item name="backgroundColor">@color/black</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>